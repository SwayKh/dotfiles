// vim:ft=rasi
configuration {
  modi:                 "drun,run,filebrowser,window";
  dpi:                  90;
  show-icons:           true;
  icon-theme:           "Papirus";
  terminal:             "footclient";
  window-format:        "{w} · {c} · {t}";
  disable-history:      false;
  max-history-size:     50;

  display-drun:         " Apps"; // 󰀻
  display-run:          " Runs";
  display-nerdy:        "󰱨 Nerdy";
  display-emoji:        "󰱨 Emoji";
	display-window:       " Windows";
  display-filebrowser:  " Files";
	display-ssh:          "󰣀 SSH";
	display-keys:         " Keys";

  filebrowser {
    directory: "/home/sumit/";
  }
}

@import "colors"

window {
  /*Removing height make the window height equal to num of opts*/
  /*height: 40%;*/
  width: 40%;
  orientation: vertical;
  location: north;
  anchor: center;
  x-offset: 0px;
  y-offset: 0px;
  margin: 5px;
  padding: 5px;
  border: 2px;
  border-radius: 5px;
  spacing: 0px;
  children: [ mainbox ];
}

mainbox {
  spacing: 5px;
  children: [ inputbar, mode-switcher, listview ];
}

inputbar {
  spacing: 3px;
  /*padding: top right bottom left*/
  padding: 0px;
  children: [ "textbox-prompt-colon", entry ];
}

prompt {
  padding: 3px;
  border-radius: 5px;
}

textbox-prompt-colon {
  expand: false;
  padding: 3px 15px;
  border-radius: 5px;
  str: " "; /* */
}

entry {
  placeholder:  "Search...";
  padding: 0px;
  border-radius: 5px;
}

mode-switcher {
  spacing: 3px;
  orientation: horizontal;
}

button {
  padding: 3px;
  border-radius: 5px;
}

listview {
  lines: 7;
  spacing: 3px;
  scrollbar: false;
  cycle: false;
  dynamic: false;
  fixed-height: false;
  spacing: 0px;
  /* List view has the dash border, Remove it here */
  /*border: 0px;*/
  margin: 0px;
  padding: 5px;
  border: 1px;
  border-radius: 5px;
}

element {
  border: 0px;
  border-radius: 5px;
  padding: 3px;
}
