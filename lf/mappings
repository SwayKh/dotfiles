# vim:ft=conf
# Remove some default keybindings
clearmaps # Clears all mappings except :

map q quit
map k up
map j down
map h updir
map l open
map gg top
map G bottom
map K :updir; up; open
map J :updir; down; open
map x cut
map c copy
map y :yank-path
map p :paste; clear
map P :paste-async
map L link
map v invert
map ] jump-next
map [ jump-prev
map f search
map F :fzf_jump
map / search
map e $$f # Execute the selected file, must be executable
map w $$SHELL
map r rename
map R bulk-rename
map o &xdg-open $f
map O lfrc
map N newDir
map a :push %mkdir<space>
map D $rm -rf $fx
map | :set ratios 1:2
map ; shell
map . selectRandom
map \% shell-pipe
map \! shell-wait
map \& shell-async
map \$ shell
map \' !true
map \\ :calcdirsize; down;

map <a-j> :push 5j
map <a-k> :push 5k
map <c-d> half-down
map <c-u> half-up
map <c-r> reload
map <c-l> %lf -remote "send $id source ~/.config/lf/lfrc"

map <enter> open
map <esc> unselect
map <delete> delete
map <backspace2> clear
map <space> :toggle; down

map dd trash
map mp chmod #use 664, 777 notation rather than u+x
map md mkdir
map mf mkfile
map mc mark-save
map mx chmodx
map ua unarchive
map bg setwallpaper
map du directory_size # Requires ncdu utility

# Bookmark Bindings
map gh cd ~ # This is default
map g/ cd /
map gD cd ~/Documents
map gd cd ~/Downloads
map gc cd ~/.config
map gw cd ~/wallpapers/Images/
map gt cd ~/Test
map gT cd ~/.trash
map ga cd ~/Android
map gs cd ~/scripts
map g. cd ~/dotfiles/
map gr cd ~/Roms/
map go cd ~/Obsidian/Vault/
map gb cd ~/.local/bin
map gls cd ~/.local/share/
map gpc cd ~/Pictures
map gps cd ~/Pictures/Screenshots/

map gpp cd ~/Projects/Python/
map gpg cd ~/Projects/Go/
map gpw cd ~/Projects/Web/
map gpo cd ~/Projects/Web/TheOdinProject/
map gpi cd '~/Projects/Go/N-Cover-Scraper/'

map gA cd /run/user/1001/07b84bc3_33cd_4b24_a7ac_af034681c2a5/storage/emulated/0/
