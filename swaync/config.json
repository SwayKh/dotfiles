{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "ignore-gtk-theme": true,
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "layer-shell-cover-screen": true,
  "cssPriority": "highest",
  "control-center-margin-top": 5,
  "control-center-margin-bottom": 5,
  "control-center-margin-right": 5,
  "control-center-margin-left": 5,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "relative-timestamps": true,
  "control-center-width": 500,
  "control-center-height": 600,
  "notification-window-width": 500,
  "keyboard-shortcuts": true,
  "notification-grouping": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "text-empty": "No Notifications",
  "script-fail-notify": true,
  "scripts": {},
  "notification-visibility": {},
  "widgets": [
    "title",
    "buttons-grid",
    "backlight",
    "volume",
    "mpris",
    "notifications"
  ],
  "widget-config": {
    "inhibitors": {
      "text": "Inhibitors",
      "button-text": "Clear All",
      "clear-all-button": true
    },
    "title": {
      "text": "Notification Center",
      "clear-all-button": true,
      "button-text": "󰆴 Clear"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "label": {
      "max-lines": 1,
      "text": "Notification Center"
    },
    "mpris": {
      "blacklist": [],
      "autohide": false,
      "show-album-art": "always",
      "loop-carousel": false
    },
    "volume": {
      "label": "󰕾"
    },
    "backlight": {
      "label": "󰃟",
      "device": "amdgpu_bl1"
    },
    "buttons-grid": {
      "buttons-per-row": 4,
      "actions": [
        {
          "label": " ",
          "type": "toggle",
          "active": false,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
          "update-command": "sh -c '[ $(rofi-wifi status) = \"enabled\" ] && echo true || echo false'"
        },
        {
          "label": " ",
          "type": "toggle",
          "active": false,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && bluetoothctl power on || bluetoothctl power off'",
          "update-command": "sh -c '[ $(rofi-bluetooth status) = \"enabled\" ] && echo true || echo false'"
        },
        {
          "label": "󰖁 ",
          "type": "toggle",
          "active": false,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && pamixer --mute || pamixer --unmute'",
          "update-command": "sh -c '[[ $(pamixer --get-mute) == \"false\" ]] && echo false || echo true'"
        },
        {
          "label": " ",
          "type": "toggle",
          "active": false,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && swaync-client --dnd-on || swaync-client --dnd-off'",
          "update-command": "sh -c '$(swaync-client --get-dnd | grep -q \"false\" ) && echo false || echo true'"
        },
        {
          "label": " ",
          "command": "systemctl poweroff"
        },
        {
          "label": " ",
          "command": "systemctl reboot"
        },
        {
          "label": " ",
          "command": "gtklock"
        },
        {
          "label": "󰍂 ",
          "command": "niri msg action quit"
        }
      ]
    }
  }
}
